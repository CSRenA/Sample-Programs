<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.gmu.lander16.gmuquotegenerator">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RandomQuoteActivity" />
        <activity android:name=".SearchQuotesActivity" />
        <activity android:name=".NoQuotesActivity" />
        <activity android:name=".RecentSearchesActivity" />
        <activity android:name=".FoundQuotesActivity" />
        <activity android:name=".AddNewQuoteActivity" />
        <activity android:name=".UnsuccessfulAddActivity" />
        <activity android:name=".SuccessfulAddActivity" />
        <activity android:name=".SearchKeywordActivity" />
        <activity android:name=".FoundKeywordsActivity" />
        <activity android:name=".NoKeywordsActivity"></activity>
    </application>

</manifest>